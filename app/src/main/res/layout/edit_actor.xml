<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar_main"
            android:id="@+id/appbarmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbarmain"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editactortv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/actorNaam"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addActorTemplateText"/>

            <EditText
                android:id="@+id/actorEmail"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addActorTemplateText"/>

            <EditText
                android:id="@+id/actorFunctie"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addActorTemplateText"/>

            <EditText
                android:id="@+id/actorTel"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addActorTemplateText"/>

            <EditText
                android:id="@+id/actorAantekeningen"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addActorTemplateText"/>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/saveEditedActor"
            android:src="@drawable/ic_menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:elevation="4dp"/>

    </RelativeLayout>
    <include layout="@layout/side_navigation"/>
</android.support.v4.widget.DrawerLayout>